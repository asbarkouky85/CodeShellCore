@model FileNgInput

<input type="file"
       class="form-control @Model.Classes"
       placeholder="@Html.Raw(Model.PlaceHolder)"
       accept="application/pdf,application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,image/*"
       name="@Model.FormFieldName"
       [(ngModel)]="@Model.NgModelName@(".")@Model.FormFieldName"
       
       @Html.Raw(Model.Attributes)>

