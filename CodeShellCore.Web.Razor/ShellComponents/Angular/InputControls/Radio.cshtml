@model RadioNgInput
<div class="btn-group btn-group-toggle btnToggle radio-group">
    @foreach (var item in Model.Values)
    {
        <label class="btn btn-secondary" [ngClass]="@Html.Raw(Model.NgModelName+"."+Model.MemberName+"=="+item.Value)?'active':''">
            <input type="radio" name="@Html.Raw(Model.FieldName)" [(ngModel)]="@Model.NgModelName@(".")@Model.MemberName" [value]="@item.Value" @Html.Raw(Model.Attributes) @(!Model.Enabled ? " disabled" : "")>
            @Html.Word(item.Key)
        </label>
    }

</div>
