@model HomeSlide
@{
    Layout = Html.Config().Layout;
}

@using (Html.NgForm("Form"))
{
    @Html.FileGroup(d => d.ImageFile, "image_f", "Upload", required: true, size: 12)


    @Html.ControlGroup(d => d.Title, coll: Html.VCollection().AddRequired(), localizable: true, size: 12)
    @Html.TextAreaGroup(d => d.Text, coll: Html.VCollection().AddRequired(), localizable: true, size: 12)
    @Html.ControlGroup(d => d.Url, coll: Html.VCollection().AddPattern($"'{Patterns.Url}'"), size: 12)
    @Html.SelectControlGroup(d => d.IsActive, Lister.Make("isActive", false), "name", "id", nullable: false)

}

@section buttons{
    @Html.SubmitButton()
    @Html.Button("Cancel", "Cancel()", btn: BtnClass.Default)
}